<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_list_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12dp"/>


        <TextView
            android:id="@+id/textView_list_theater"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/textView_list_seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/textView_list_detectTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/textView_list_isLost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/btn_list_Retrieve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12dp"
            android:backgroundTint="#B61818"
            android:text="회수"/>

    </LinearLayout>

</LinearLayout>