<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:text="Dankook Cinema"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>



        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#FFE1DFDF"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="40dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="170dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/move_login"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="로그인"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/move_reserve"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="예매"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/move_myinfo"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="나의 시네마"
                android:background="#00ff0000"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

            <EditText
                android:id="@+id/identity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <EditText
                android:id="@+id/identity_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="27dp"
            android:orientation="horizontal"
            android:background="#6DE1E0E0"
            android:layout_gravity="center">

            <Space
                android:layout_width="120dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="금주 인기 영화 Best 3 !!"
                android:textStyle="italic|bold"
                android:textColor="#9C000000"
                android:textSize="15sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/image_harry"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/harrypotter" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/title_harry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해리포터와 불의 잔"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/image_run"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fastfurious" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/title_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분노의 질주"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/image_land"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lalaland" />

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/title_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="라라랜드"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>